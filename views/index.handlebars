<h1>Burgers!</h1>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                {{#each burgers}} {{#unless this.devoured}}
                <div>
                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>

            <div class="col-sm-4 col-md-offset-2">
                {{#each burgers}} {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
    <div class="col s12">
        <form action="/api/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Delish Burgery">
            <button type="submit" class="addBurgerButton">Add The Burger</button>
        </form>
    </div>
</div>

